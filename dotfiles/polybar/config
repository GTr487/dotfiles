[color]
background = #120b10
foreground = #eeffff
emphasis-foreground = #00ffc8
selected-background = #ff0055
selected-foreground = #000000

[bar/gnbar]
ipc = true
width = 100%
height = 30
offset-x = 0
offset-y = 0
background = ${color.background}
foreground = ${color.foreground}
border-size = 0
border-color = #ffffff
font-0 = xft:Monospace:size=10:weight=regular
modules-center = task_timer
modules-left = workspace
modules-right = cpu date


[module/workspace]
pin-workspaces = true
enable-click = true
enable-scroll = true

type = internal/xworkspaces

format =<label-state>
format-padding = 0

label-active = %name%
label-focused = %name%
label-unfocused = %name%
label-urgent = %name%
label-padding = 1
label-active-foreground = ${color.selected-foreground}
label-active-background = ${color.selected-background}
label-active-padding = 1
label-urgent-padding = 1
label-occupied-padding = 1
label-empty-padding = 1

[module/date]
type = internal/date
interval = 60

date = "%d/%m/%Y"
time = "%H:%M"

format = <label>
format-background = ${color.background}
format-foreground = ${color.foreground}
format-overline = ${color.background}
format-underline = ${color.background}
format-padding = 2

label = %time% - %date%

[module/cpu]
type = internal/cpu
interval = 1

format-prefix = [CPU
format = <label>
format-suffix = ]
format-padding = 2

label = " %percentage%%"
label-alignment = right
label-foreground = ${color.emphasis-foreground}

[module/task_timer]
type = custom/script
exec = ~/.config/polybar/scripts/task_timer.sh
interval = 60
label = %output%
